const button_1 = document.getElementById('aufgabe1');
button_1.addEventListener('click',arbeit)
button_1.addEventListener('click',show_aufgabe_2)

const buttun_2 = document.getElementById("aufgabe2");
buttun_2.addEventListener('click', aufgabe_2);
document.getElementById('aufgabe3').addEventListener('click', ich_nerve);
document.getElementById('aufgabe3').addEventListener('click', ich_nerve);
function aufgabe_2(){
    const gib_mir_Arbeit = document.getElementById('animate');
    gib_mir_Arbeit.addEventListener('mouseover',arbeitsvermittlung);
    gib_mir_Arbeit.addEventListener('mouseout', ich_bin_weg);
    gib_mir_Arbeit.addEventListener('mouseout', show_aufgabe_3);

}

function ich_nerve() {
    delete_all()
}
function delete_me() {
    this.remove()
}


function delete_all(){
    const body_arry = document.body.children;
    for (const bodyArryElement of body_arry) {
        bodyArryElement.addEventListener('mouseover',delete_me);
    }
}



